{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "ES6",
      "ESNext"
    ],
    "module": "commonjs",
    /*  "rootDir": "src", */
    "allowJs": true,
    "outDir": "build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": true,
    /*     "strictPropertyInitialization": false, */
    "skipLibCheck": true,
    "paths": {
      "@app/*": [
        "./src/app/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
    }
  }
}